#!/bin/bash
#BSUB -J ImplicitJob-3
#BSUB -q short
#BSUB -n 40
#BUSB -e ImplicitJob-3.err
#BUSB -o ImplicitJob-3.out
#BSUB -R "span[ptile=40]"

module purge
module load intel/2018.4
module load mpi/intel/2018.4


# Additive Schwarz;
# implicit fixed-size  
mpirun -np 1  ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 5  ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 10 ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 15 ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 20 ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 25 ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 30 ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 35 ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 40 ../build/implicitMethod -size 10000 -dt 0.00001 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1

# implicit iso-granular 
mpirun -np 1  ../build/implicitMethod -size 10000 -dt 0.0001    -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 2  ../build/implicitMethod -size 10000 -dt 0.000095  -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 4  ../build/implicitMethod -size 10000 -dt 0.000065  -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 6  ../build/implicitMethod -size 10000 -dt 0.000043  -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 8  ../build/implicitMethod -size 10000 -dt 0.0000325 -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1
mpirun -np 10 ../build/implicitMethod -size 10000 -dt 0.000026  -testing_mode 1 -pc_asm_type basic -log_view >>imp-Additive.txt 2>&1